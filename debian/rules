#!/usr/bin/make -f

%:
	dh $@

VT_VERSION=2015.`date +%Y%m%d`

get-orig-source:
	# BUGS:
	# tar to directory, move and remove, as the tarball is malformed
	set -e; \
		wget -c -O ../vaudtax_${VT_VERSION}.orig.tar.gz \
			'https://vaudtax-dl.vd.ch/vaudtax2015/telechargement/linux/VaudTax_2015.tar.gz'; \
		tar --transform "s#^[^/]*/#./#" -xzvf ../vaudtax_${VT_VERSION}.orig.tar.gz; \
		VT_VERSION_REAL=`grep '<version>' version.xml | sed -e 's#^.*<version>\(.*\)</version>.*$$#\1#g'`; \
		dch --newversion 2015.$${VT_VERSION_REAL}-0generator0 --force-bad-version -m "New 2015 $${VT_VERSION_REAL} release" ; \
		dch --release -m "New 2015 $${VT_VERSION_REAL} release" ; \
		ln -sf vaudtax_${VT_VERSION}.orig.tar.gz ../vaudtax_2015.$${VT_VERSION_REAL}.orig.tar.gz
