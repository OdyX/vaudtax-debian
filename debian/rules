#!/usr/bin/make -f

%:
	dh $@

VT_VERSION=2013.`date +%Y%m%d`

get-orig-source:
	# BUGS:
	# --no-check-certificate in wget, as the HTTPS certificate is not recognised
	# tar to directory, move and remove, as the tarball is malformed
	set -e; \
		wget --no-check-certificate -c -O ../vaudtax_${VT_VERSION}.orig.tar.gz \
			'https://vaudtax-dl.vd.ch/vaudtax2013/telechargement/linux/VaudTax_2013.tar.gz'; \
		tar --transform "s#^[^/]*/#./#" -xzvf ../vaudtax_${VT_VERSION}.orig.tar.gz; \
		VT_VERSION_REAL=`grep '<version>' version.xml | sed -e 's#^.*<version>\(.*\)</version>.*$$#\1#g'`; \
		dch --newversion 2013.$${VT_VERSION_REAL}-0generator0 --force-bad-version -m "New 2013 $${VT_VERSION_REAL} release" ; \
		dch --release -m "New 2013 $${VT_VERSION_REAL} release" ; \
		ln -sf ../vaudtax_${VT_VERSION}.orig.tar.gz ../vaudtax_2013.$${VT_VERSION_REAL}.orig.tar.gz
